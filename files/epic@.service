[Unit]
Description=Starts the IRIS/Cache database and Epic daemons for %I.
ConditionFileIsExecutable=/epic/%i/bin/runlevel
ConditionFileIsExecutable=/epic/%i/bin/runlevel
RequiresOverridable=ntpd.service
After=ntpd.service local-fs.target

[Service]
Type=forking
ExecStart=/epic/%i/bin/runlevel -r u
ExecStop=/epic/%i/bin/runlevel -r c
RemainAfterExit=yes
Restart=no

[Install]
WantedBy=default.target
